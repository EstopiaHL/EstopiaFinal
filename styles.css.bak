/* Reset some default styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Arial', sans-serif;
  font-size: 18px; /* Increase the font size */
  background: linear-gradient(to bottom right, #ff7f7f, #f0f0f0); /* Apply a light red and grey gradient background */
}


.container {
  max-width: 960px;
  margin: 0 auto;
  padding: 40px;
  border: 12px solid #666; /* Border color: light red */
  border-radius: 10px; /* Rounded border corners */
  text-align: center;
  background-color: #f0f0f0; /* Background color: light gray */
}

img {
  border: 6px solid #666; /* Border color: light red */
  border-radius: 10px; /* Rounded border corners */
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* Adding a subtle box shadow */
  animation: flashy-animation 2s infinite;
}

header {
  background-color: #555; /* Dark gray */
  color: #fff;
  padding: 20px;
  text-align: center;
}

nav ul {
  list-style: none;
  display: flex;
  justify-content: center;
}

nav ul li {
  margin-right: 20px;
}

nav ul li a {
  color: #fff;
  text-decoration: none;
  font-size: 18px;
  transition: color 0.3s ease;
}

nav ul li a:hover {
  color: #ffca3a;
}

section {
  padding: 40px 0;
  text-align: center;
}

h2 {
  font-size: 32px;
  margin-bottom: 30px;
  color: #333;
}

.project {
  margin-bottom: 40px;
}

h3 {
  font-size: 24px;
  margin-bottom: 15px;
  color: #333;
}

p {
  color: #666;
  line-height: 1.5;
  text-align: center;
}

footer {
  background-color: #555; /* Dark gray */
  color: #fff; /* Set text color to white */
  padding: 20px;
  text-align: center;
  font-size: 14px;
}

.container2 {
  max-width: 960px;
  margin: 0 auto;
  padding: 40px;
  border: 12px solid #666; /* Border color: light red */
  border-radius: 10px; /* Rounded border corners */
  text-align: center;
  background-color: #f0f0f0; /* Background color: light gray */
}

footer p {
  background-color: #555; /* Dark gray */
  color: #fff; /* Set text color to white */
  padding: 20px;
  text-align: center;
  font-size: 14px;
}

table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}

th,
td {
  padding: 12px 16px;
  text-align: center;
  border-bottom: 1px solid #ddd;
}

th {
  background-color: #555; /* Dark gray */
  color: #fff;
}

tr:nth-child(even) {
  background-color: #f2f2f2;
}

tr:hover {
  background-color: #ddd;
}

td.data-bar {
  padding: 5px;
  position: relative;
}

td.data-bar span {
  display: block;
  position: absolute;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #lightgreen; /* Light red */
}

audio {
  margin-top: 10px;
}

.custom-table {
  width: 100%;
  border-collapse: collapse;
}

.custom-table th,
.custom-table td {
  text-align: center;
  padding: 8px;
  border: 1px solid black;
}

.container3 {
  max-width: 960px;
  margin: 0 auto;
  padding: 40px;
  text-align: center;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 40px;
  max-width: 960px;
  margin: 0 auto;
  padding: 40px;
  border: 12px solid #666; /* Dark gray */
  border-radius: 10px; /* Rounded border corners */
  background-color: #f0f0f0; /* Background color: light gray */
}

.description {
  background-color: #f0f0f0; /* Set a light gray background color */
  padding: 10px;
  border: 5px solid #666;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* Add a subtle box shadow */
  color: #333; /* Set the text color to dark gray */
}


.container3 h2 {
  grid-column: 1/-1;
}

.container3 .project {
  text-align: center; /* Update to center align */
}

.container3 .project img {
  display: block;
  margin: 0 auto;
  max-width: 100%;
  height: auto;
  margin-top: 20px;
  font-size: 24px;
}

.container3 .project p {
  margin-top: 10px;
  color: #666;
  line-height: 1.5;
  text-align: center; /* Update to center align */
}

@keyframes flashy-animation {
  0% {
	border: 6px solid #333; /* Border color: light red */
    color: #333; /* Start with dark gray color */
  }
  50% {
	border: 6px solid #ffca3a; /* Border color: light red */  
    color: #ffca3a; /* Transition to a flashy color */
  }
  100% {
	border: 6px solid #333; /* Border color: light red */
    color: #333; /* Transition back to dark gray color */
  }
}

.flashy {
  animation: flashy-animation 2s infinite; /* Apply the animation with a duration of 2 seconds and repeat infinitely */
  font-size: 21.5px; 
}


@media screen and (max-width: 768px) {
  .container3 {
    grid-template-columns: 1fr;
  }
}

@media screen and (max-width: 480px) {
  .container {
    padding: 20px;
  }

  .container3 .project {
    text-align: center;
  }
}
