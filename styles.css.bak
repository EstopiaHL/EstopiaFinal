/* Reset some default styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Arial', sans-serif;
  background-color: #f0f0f0;
}

.container {
  max-width: 960px;
  margin: 0 auto;
  padding: 40px;
  border: 4px solid #42b983; /* Border color: #42b983 (green) */
  border-radius: 10px; /* Rounded border corners */
  text-align: center;
  background-color: #f0f0f0; /* Background color: light gray */
}

.ME {
  border: 4px solid #42b983; /* Border color: #42b983 (green) */
  border-radius: 10px; /* Rounded border corners */
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3); /* Adding a subtle box shadow */
}

header {
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
}

nav ul {
  list-style: none;
  display: flex;
  justify-content: center;
}

nav ul li {
  margin-right: 20px;
}

nav ul li a {
  color: #fff;
  text-decoration: none;
  font-size: 18px;
  transition: color 0.3s ease;
}

nav ul li a:hover {
  color: #ffca3a;
}

section {
  padding: 40px 0;
  text-align: center;
}

h2 {
  font-size: 32px;
  margin-bottom: 30px;
  color: #333;
}

.project {
  margin-bottom: 40px;
}

h3 {
  font-size: 24px;
  margin-bottom: 15px;
  color: #333;
}

p {
  color: #666;
  line-height: 1.5;
}

footer {
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
  font-size: 14px;
}

.container2 {
  max-width: 960px;
  margin: 0 auto;
  padding: 40px;
  border: 4px solid #42b983; /* Border color: #42b983 (green) */
  border-radius: 10px; /* Rounded border corners */
  text-align: center;
  background-color: #f0f0f0; /* Background color: light gray */
}

footer p {
  margin-bottom: 10px;
}

table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}

th, td {
  padding: 12px 16px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

th {
  background-color: #333;
  color: #fff;
}

tr:nth-child(even) {
  background-color: #f2f2f2;
}

tr:hover {
  background-color: #ddd;
}

audio {
  margin-top: 10px;
}

  .custom-table {
    width: 100%;
    border-collapse: collapse;
  }

  .custom-table th,
  .custom-table td {
    text-align: center;
    padding: 8px;
    border: 1px solid black;
  }

.container3 {
  max-width: 960px;
  margin: 0 auto;
  padding: 40px;
  text-align: center;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 40px;
  max-width: 960px;
  margin: 0 auto;
  padding: 40px;
  border: 2px solid #333; /* Add a border with color #333 */
  border-radius: 10px; /* Rounded border corners */
  background-color: #f0f0f0; /* Set a clean background color */
}

.description {
  border: 2px solid #555;
  padding: 10px;
  border-radius: 5px;
}

.container3 h2 {
  grid-column: 1/-1;
}

.container3 .project {
  text-align: left;
}

.container3 .project img {
  display: block;
  margin: 0 auto;
  max-width: 100%;
  height: auto;
  margin-top: 20px;
  font-size: 24px;
}

.container3 .project p {
  margin-top: 10px;
  color: #666;
  line-height: 1.5;
}

@media screen and (max-width: 768px) {
  .container3 {
    grid-template-columns: 1fr;
  }
}

@media screen and (max-width: 480px) {
  .container {
    padding: 20px;
  }

  .container3 .project {
    text-align: center;
  }
}